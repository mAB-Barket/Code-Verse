/* ============================================
   CodeVerse - Multi-Language Learning Platform
   Professional Design System v2.0
   ============================================ */

/* === Google Fonts Import === */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@600;700;800;900&family=Fira+Code:wght@400;500;600&display=swap');

/* === CSS Custom Properties === */
:root {
    --primary-50: #eef2ff;
    --primary-100: #e0e7ff;
    --primary-200: #c7d2fe;
    --primary-300: #a5b4fc;
    --primary-400: #818cf8;
    --primary-500: #6366f1;
    --primary-600: #4f46e5;
    --primary-700: #4338ca;
    --primary-800: #3730a3;
    --primary-900: #312e81;

    --accent-50: #ecfdf5;
    --accent-100: #d1fae5;
    --accent-400: #34d399;
    --accent-500: #10b981;
    --accent-600: #059669;

    --neutral-50: #f8fafc;
    --neutral-100: #f1f5f9;
    --neutral-200: #e2e8f0;
    --neutral-300: #cbd5e1;
    --neutral-400: #94a3b8;
    --neutral-500: #64748b;
    --neutral-600: #475569;
    --neutral-700: #334155;
    --neutral-800: #1e293b;
    --neutral-900: #0f172a;

    --cpp-color: #00599C;
    --python-color: #3776AB;
    --python-accent: #FFD43B;
    --javascript-color: #F7DF1E;
    --javascript-dark: #323330;
    --java-color: #ED8B00;
    --java-dark: #5382a1;
    --csharp-color: #68217A;
    --rust-color: #CE422B;
    --go-color: #00ADD8;
    --swift-color: #F05138;
    --html-color: #E34F26;
    --css-color: #1572B6;
    --typescript-color: #3178C6;
    --kotlin-color: #7F52FF;
    --ruby-color: #CC342D;

    --success: #10b981;
    --warning: #f59e0b;
    --error: #ef4444;
    --info: #6366f1;

    --font-sans: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
    --font-mono: 'Fira Code', 'Cascadia Code', 'Consolas', monospace;
    --font-display: 'Poppins', 'Segoe UI', system-ui, sans-serif;

    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);

    --radius-sm: 0.375rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
    --radius-xl: 1rem;
    --radius-2xl: 1.5rem;
    --radius-full: 9999px;

    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 350ms ease;

    --max-width: 1280px;
    --header-height: 70px;
}

/* Dark mode */
[data-theme="dark"] {
    --neutral-50: #0f172a;
    --neutral-100: #1e293b;
    --neutral-200: #334155;
    --neutral-300: #475569;
    --neutral-400: #64748b;
    --neutral-500: #94a3b8;
    --neutral-600: #cbd5e1;
    --neutral-700: #e2e8f0;
    --neutral-800: #f1f5f9;
    --neutral-900: #f8fafc;
}

/* === Reset === */
*, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    -webkit-text-size-adjust: 100%;
}

body {
    font-family: var(--font-sans);
    background-color: var(--neutral-50);
    color: var(--neutral-800);
    line-height: 1.7;
    min-height: 100vh;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
}

img { max-width: 100%; height: auto; display: block; }
a { text-decoration: none; color: inherit; transition: color var(--transition-fast); }
ul, ol { list-style: none; }
button { cursor: pointer; border: none; background: none; font-family: inherit; font-size: inherit; }
input, textarea, select { font-family: inherit; font-size: inherit; }

/* === Typography === */
h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-display);
    font-weight: 700;
    line-height: 1.3;
    color: var(--neutral-900);
}
h1 { font-size: clamp(2rem, 5vw, 3rem); }
h2 { font-size: clamp(1.5rem, 3vw, 2.25rem); }
h3 { font-size: clamp(1.15rem, 2.5vw, 1.4rem); }
h4 { font-size: 1.15rem; }
p { margin-bottom: 1rem; color: var(--neutral-600); }

/* === Layout === */
.container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
}

.section-title {
    text-align: center;
    margin-bottom: 3rem;
}
.section-title h2 { margin-bottom: 0.5rem; }
.section-title p {
    font-size: 1.1rem;
    color: var(--neutral-500);
    max-width: 640px;
    margin: 0 auto;
}
.section-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-500), var(--accent-500));
    border-radius: var(--radius-full);
    margin: 1rem auto 0;
}

/* === Badges === */
.badge {
    display: inline-flex;
    align-items: center;
    padding: 0.2rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}
.badge-primary { background: var(--primary-100); color: var(--primary-700); }
.badge-success { background: var(--accent-100); color: var(--accent-600); }
.badge-warning { background: #fef3c7; color: #92400e; }

/* ==============================
   SITE HEADER / NAVIGATION
   ============================== */
.site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--neutral-200);
    height: var(--header-height);
    transition: box-shadow var(--transition-base);
}
.site-header.scrolled { box-shadow: var(--shadow-md); }

[data-theme="dark"] .site-header {
    background: rgba(15,23,42,0.95);
}
[data-theme="dark"] .nav-dropdown-content {
    background: var(--neutral-100);
    border-color: var(--neutral-200);
}
[data-theme="dark"] .main-nav.mobile-open {
    background: var(--neutral-50);
}

.header-inner {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 800;
    text-decoration: none;
}
.logo-icon {
    width: 36px; height: 36px;
    background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
    border-radius: var(--radius-md);
    display: flex; align-items: center; justify-content: center;
    color: white; font-size: 1.1rem; font-weight: 900;
}
.logo span {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-800));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.main-nav {
    display: flex;
    align-items: center;
    gap: 0.25rem;
}
.main-nav a {
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    font-weight: 500;
    font-size: 0.938rem;
    color: var(--neutral-600);
    transition: all var(--transition-fast);
    position: relative;
}
.main-nav a:hover, .main-nav a.active {
    color: var(--primary-600);
    background: var(--primary-50);
}

/* Dropdown menu */
.nav-dropdown {
    position: relative;
}
.nav-dropdown-content {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    min-width: 220px;
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-xl);
    padding: 0.5rem;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-fast);
    z-index: 100;
}
.nav-dropdown:hover .nav-dropdown-content {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
}
.nav-dropdown-content a {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.6rem 0.75rem;
    border-radius: var(--radius-md);
    font-size: 0.9rem;
}
.nav-dropdown-content a:hover {
    background: var(--neutral-100);
}
.nav-dropdown-content .lang-dot {
    width: 8px; height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
}

.nav-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.theme-toggle {
    width: 40px; height: 40px;
    border-radius: var(--radius-md);
    display: flex; align-items: center; justify-content: center;
    color: var(--neutral-500);
    transition: all var(--transition-fast);
    font-size: 1.2rem;
}
.theme-toggle:hover {
    background: var(--neutral-100);
    color: var(--neutral-700);
}

.mobile-menu-btn {
    display: none;
    width: 40px; height: 40px;
    border-radius: var(--radius-md);
    align-items: center; justify-content: center;
}
.hamburger {
    width: 22px; height: 16px;
    position: relative;
    display: flex; flex-direction: column; justify-content: space-between;
}
.hamburger span {
    display: block; width: 100%; height: 2px;
    background: var(--neutral-600); border-radius: 2px;
    transition: all var(--transition-fast);
}
.mobile-menu-btn.active .hamburger span:nth-child(1) { transform: translateY(7px) rotate(45deg); }
.mobile-menu-btn.active .hamburger span:nth-child(2) { opacity: 0; }
.mobile-menu-btn.active .hamburger span:nth-child(3) { transform: translateY(-7px) rotate(-45deg); }

/* ==============================
   HERO SECTION
   ============================== */
.hero {
    padding: 4rem 0 3rem;
    background: linear-gradient(135deg, var(--neutral-50) 0%, var(--primary-50) 50%, var(--neutral-50) 100%);
    position: relative;
    overflow: hidden;
}
.hero::before {
    content: '';
    position: absolute;
    top: -50%; right: -25%;
    width: 600px; height: 600px;
    background: radial-gradient(circle, var(--primary-200) 0%, transparent 70%);
    opacity: 0.4;
    animation: heroFloat 20s ease-in-out infinite;
}
.hero::after {
    content: '';
    position: absolute;
    bottom: -30%; left: -15%;
    width: 400px; height: 400px;
    background: radial-gradient(circle, var(--accent-100) 0%, transparent 70%);
    opacity: 0.5;
    animation: heroFloat 15s ease-in-out infinite reverse;
}
@keyframes heroFloat {
    0%, 100% { transform: translate(0,0) scale(1); }
    33% { transform: translate(30px,-20px) scale(1.05); }
    66% { transform: translate(-20px,15px) scale(0.95); }
}

.hero-content {
    position: relative; z-index: 1;
    max-width: var(--max-width);
    margin: 0 auto; padding: 0 2rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 3rem;
}
.hero-text h1 { margin-bottom: 1.25rem; line-height: 1.15; }
.hero-text h1 .gradient-text {
    background: linear-gradient(135deg, var(--primary-500), var(--accent-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
.hero-text .subtitle {
    font-size: 1.15rem;
    color: var(--neutral-500);
    margin-bottom: 1.75rem;
    max-width: 520px;
}
.hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}
.hero-stats {
    display: flex; gap: 2.5rem;
    margin-top: 2rem; padding-top: 1.5rem;
    border-top: 1px solid var(--neutral-200);
}
.stat-number {
    font-family: var(--font-display);
    font-size: 1.75rem; font-weight: 800;
    color: var(--primary-600);
    display: block;
}
.stat-label {
    font-size: 0.85rem;
    color: var(--neutral-500);
    margin-top: 0.15rem;
}

.hero-visual {
    display: flex; align-items: center; justify-content: center;
}

/* Code Window */
.code-window {
    background: var(--neutral-900);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
    width: 100%; max-width: 500px;
}
.code-window-header {
    padding: 0.75rem 1rem;
    background: rgba(255,255,255,0.06);
    display: flex; align-items: center; gap: 8px;
    border-bottom: 1px solid rgba(255,255,255,0.06);
}
.code-dot { width: 12px; height: 12px; border-radius: 50%; }
.code-dot.red { background: #ff5f57; }
.code-dot.yellow { background: #febc2e; }
.code-dot.green { background: #28c840; }
.code-window-title {
    margin-left: auto;
    font-size: 0.8rem; color: var(--neutral-400);
    font-family: var(--font-mono);
}
.code-window-body {
    padding: 1.25rem;
    font-family: var(--font-mono);
    font-size: 0.85rem; line-height: 1.8;
    color: #e2e8f0; min-height: 200px;
}
.code-window-body .ln { color: #546e7a; margin-right: 1rem; user-select: none; }
.code-window-body .keyword { color: #c792ea; }
.code-window-body .string { color: #c3e88d; }
.code-window-body .function { color: #82aaff; }
.code-window-body .comment { color: #546e7a; font-style: italic; }
.code-window-body .number { color: #f78c6c; }
.code-window-body .type { color: #ffcb6b; }
.code-window-body .operator { color: #89ddff; }
.code-window-body .decorator { color: #c792ea; }

/* ==============================
   BUTTONS
   ============================== */
.btn {
    display: inline-flex; align-items: center; gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-lg);
    font-weight: 600; font-size: 0.938rem;
    transition: all var(--transition-fast);
    white-space: nowrap;
}
.btn-primary {
    background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
    color: white;
    box-shadow: 0 4px 14px rgb(79 70 229 / 0.35);
}
.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgb(79 70 229 / 0.45);
}
.btn-secondary {
    background: white; color: var(--neutral-700);
    border: 1.5px solid var(--neutral-300);
}
.btn-secondary:hover {
    border-color: var(--primary-300);
    color: var(--primary-600);
    background: var(--primary-50);
}
.btn-lg { padding: 1rem 2rem; font-size: 1rem; }

/* ==============================
   LANGUAGE CARDS
   ============================== */
.languages-section { padding: 4rem 0; }
.language-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
}
.language-card {
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    transition: all var(--transition-base);
    position: relative; overflow: hidden;
    display: flex; flex-direction: column;
    text-decoration: none;
}
.language-card::before {
    content: '';
    position: absolute; top: 0; left: 0; right: 0;
    height: 4px;
    background: var(--card-accent, var(--primary-500));
    transition: height var(--transition-base);
}
.language-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: transparent;
}
.language-card:hover::before { height: 6px; }

.language-card-header {
    display: flex; align-items: center;
    gap: 0.85rem; margin-bottom: 0.85rem;
}
.language-icon {
    width: 48px; height: 48px;
    border-radius: var(--radius-lg);
    display: flex; align-items: center; justify-content: center;
    font-size: 1.4rem; font-weight: 800; flex-shrink: 0;
}
.language-card h3 { font-size: 1.15rem; }
.language-card .description {
    color: var(--neutral-500); font-size: 0.9rem;
    flex-grow: 1; margin-bottom: 1rem;
}
.language-meta {
    display: flex; align-items: center;
    justify-content: space-between;
    padding-top: 0.85rem;
    border-top: 1px solid var(--neutral-100);
    font-size: 0.8rem; color: var(--neutral-500);
}
.language-meta .lessons, .language-meta .level {
    display: flex; align-items: center; gap: 0.3rem;
}
.difficulty-dots { display: flex; gap: 3px; }
.difficulty-dots span {
    width: 8px; height: 8px;
    border-radius: 50%; background: var(--neutral-300);
}
.difficulty-dots span.filled { background: var(--primary-500); }

/* Accent colors */
.lang-cpp { --card-accent: var(--cpp-color); }
.lang-python { --card-accent: var(--python-color); }
.lang-javascript { --card-accent: var(--javascript-color); }
.lang-java { --card-accent: var(--java-color); }
.lang-csharp { --card-accent: var(--csharp-color); }
.lang-rust { --card-accent: var(--rust-color); }
.lang-go { --card-accent: var(--go-color); }
.lang-swift { --card-accent: var(--swift-color); }
.lang-html { --card-accent: var(--html-color); }
.lang-css { --card-accent: var(--css-color); }
.lang-typescript { --card-accent: var(--typescript-color); }
.lang-kotlin { --card-accent: var(--kotlin-color); }
.lang-ruby { --card-accent: var(--ruby-color); }

/* ==============================
   FEATURES SECTION
   ============================== */
.features-section { padding: 4rem 0; background: white; }
[data-theme="dark"] .features-section { background: var(--neutral-100); }
[data-theme="dark"] .language-card { background: var(--neutral-100); }
[data-theme="dark"] .feature-card { background: var(--neutral-100); }
[data-theme="dark"] .roadmap-item-content { background: var(--neutral-100); }
[data-theme="dark"] .tutorial-sidebar { background: var(--neutral-100); }
[data-theme="dark"] .tutorial-content { background: var(--neutral-100); }
[data-theme="dark"] .quiz-section { background: var(--neutral-100); }
[data-theme="dark"] .quiz-question { background: var(--neutral-200); }
[data-theme="dark"] .quiz-option { background: var(--neutral-100); }
[data-theme="dark"] .search-container input { background: var(--neutral-100); color: var(--neutral-800); border-color: var(--neutral-300); }
[data-theme="dark"] .comparison-table tbody tr:hover { background: var(--neutral-200); }
[data-theme="dark"] .topic-card { background: var(--neutral-100); }
[data-theme="dark"] .timeline-section { background: var(--neutral-50); }
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
}
.feature-card {
    padding: 1.75rem;
    border-radius: var(--radius-xl);
    border: 1px solid var(--neutral-200);
    transition: all var(--transition-base);
    text-align: center;
}
.feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: transparent;
}
.feature-icon {
    width: 64px; height: 64px;
    border-radius: var(--radius-xl);
    display: flex; align-items: center; justify-content: center;
    font-size: 1.75rem; margin: 0 auto 1rem;
    background: var(--primary-50);
}
.feature-card h3 { margin-bottom: 0.5rem; }
.feature-card p { font-size: 0.9rem; color: var(--neutral-500); }

/* ==============================
   STATS SECTION
   ============================== */
.stats-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--primary-600), var(--primary-800));
    color: white;
}
.stats-grid {
    display: grid; grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem; text-align: center;
}
.stats-grid .stat-number { color: white; font-size: 2.5rem; }
.stats-grid .stat-label { color: rgba(255,255,255,0.75); font-size: 0.95rem; }

/* ==============================
   ROADMAP / LEARNING PATH
   ============================== */
.roadmap-section { padding: 4rem 0; }
.roadmap { position: relative; max-width: 800px; margin: 0 auto; }
.roadmap::before {
    content: '';
    position: absolute; left: 30px; top: 0; bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, var(--primary-200), var(--accent-200));
}
.roadmap-item {
    position: relative; padding-left: 70px; margin-bottom: 1.5rem;
}
.roadmap-item::before {
    content: attr(data-step);
    position: absolute; left: 16px;
    width: 30px; height: 30px;
    border-radius: 50%;
    background: var(--primary-500); color: white;
    display: flex; align-items: center; justify-content: center;
    font-size: 0.8rem; font-weight: 700; z-index: 1;
}
.roadmap-item-content {
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-lg);
    padding: 1.25rem;
    transition: all var(--transition-fast);
}
.roadmap-item-content:hover { box-shadow: var(--shadow-md); }
.roadmap-item-content h3 { margin-bottom: 0.25rem; }
.roadmap-item-content p { font-size: 0.9rem; color: var(--neutral-500); margin-bottom: 0; }

/* ==============================
   CTA SECTION
   ============================== */
.cta-section { padding: 4rem 0; text-align: center; }
.cta-box {
    background: linear-gradient(135deg, var(--primary-50), var(--accent-50));
    border: 1px solid var(--primary-200);
    border-radius: var(--radius-2xl);
    padding: 3rem; max-width: 700px; margin: 0 auto;
}
.cta-box h2 { margin-bottom: 0.5rem; }
.cta-box p { color: var(--neutral-500); margin-bottom: 1.5rem; }

/* ==============================
   SEARCH
   ============================== */
.search-container {
    position: relative; max-width: 480px;
    margin: 0 auto 1.5rem;
}
.search-container input {
    width: 100%;
    padding: 0.85rem 1.25rem 0.85rem 3rem;
    border: 1.5px solid var(--neutral-300);
    border-radius: var(--radius-full);
    font-size: 0.938rem; outline: none;
    background: white;
    transition: all var(--transition-fast);
}
.search-container input:focus {
    border-color: var(--primary-400);
    box-shadow: 0 0 0 4px rgba(99,102,241,0.15);
}
.search-container .search-icon {
    position: absolute; left: 1rem; top: 50%;
    transform: translateY(-50%);
    color: var(--neutral-400); font-size: 1.1rem;
}

/* ==============================
   TABS
   ============================== */
.tabs {
    display: flex; gap: 2px;
    background: var(--neutral-100);
    border-radius: var(--radius-lg); padding: 4px;
    margin-bottom: 1.5rem; overflow-x: auto;
}
.tab-btn {
    padding: 0.65rem 1.25rem;
    border-radius: var(--radius-md);
    font-weight: 500; font-size: 0.9rem;
    color: var(--neutral-500);
    transition: all var(--transition-fast);
    white-space: nowrap;
}
.tab-btn:hover { color: var(--neutral-700); }
.tab-btn.active {
    background: white; color: var(--neutral-800);
    box-shadow: var(--shadow-sm);
}
.tab-content { display: none; }
.tab-content.active { display: block; animation: fadeIn 0.3s ease; }

/* ==============================
   TUTORIAL PAGE LAYOUT
   ============================== */
.tutorial-layout {
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: 1.5rem;
    max-width: var(--max-width);
    margin: 1.5rem auto;
    padding: 0 2rem;
}
.tutorial-sidebar {
    position: sticky;
    top: calc(var(--header-height) + 1rem);
    height: fit-content;
    max-height: calc(100vh - var(--header-height) - 2rem);
    overflow-y: auto;
    background: white;
    border-radius: var(--radius-xl);
    border: 1px solid var(--neutral-200);
    padding: 1.25rem;
}
.sidebar-title {
    font-size: 0.8rem; font-weight: 700;
    text-transform: uppercase; letter-spacing: 0.05em;
    color: var(--neutral-400); margin-bottom: 0.75rem;
    padding-bottom: 0.5rem; border-bottom: 1px solid var(--neutral-100);
}
.sidebar-nav a {
    display: flex; align-items: center; gap: 0.5rem;
    padding: 0.5rem 0.6rem;
    border-radius: var(--radius-md);
    font-size: 0.85rem; color: var(--neutral-600);
    transition: all var(--transition-fast); margin-bottom: 2px;
}
.sidebar-nav a:hover { background: var(--neutral-100); color: var(--neutral-800); }
.sidebar-nav a.active {
    background: var(--primary-50); color: var(--primary-700); font-weight: 600;
}
.sidebar-nav a .lesson-number {
    width: 22px; height: 22px;
    border-radius: var(--radius-sm);
    background: var(--neutral-100);
    display: flex; align-items: center; justify-content: center;
    font-size: 0.7rem; font-weight: 700; color: var(--neutral-500); flex-shrink: 0;
}
.sidebar-nav a.active .lesson-number { background: var(--primary-500); color: white; }
.sidebar-nav a.completed .lesson-number { background: var(--accent-500); color: white; }
.sidebar-progress {
    margin-top: 1rem; padding-top: 1rem;
    border-top: 1px solid var(--neutral-100);
}
.progress-bar {
    height: 6px; background: var(--neutral-100);
    border-radius: var(--radius-full); overflow: hidden; margin-top: 0.5rem;
}
.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-500), var(--accent-500));
    border-radius: var(--radius-full);
    transition: width var(--transition-slow);
}
.progress-text { font-size: 0.75rem; color: var(--neutral-500); }

/* Tutorial Content */
.tutorial-content {
    background: white;
    border-radius: var(--radius-xl);
    border: 1px solid var(--neutral-200);
    padding: 2.5rem; min-width: 0;
}
.tutorial-header {
    margin-bottom: 2rem; padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--neutral-100);
}
.tutorial-header .breadcrumb {
    display: flex; align-items: center; gap: 0.5rem;
    font-size: 0.85rem; color: var(--neutral-400); margin-bottom: 0.75rem;
}
.tutorial-header .breadcrumb a { color: var(--primary-500); }
.tutorial-header .breadcrumb a:hover { text-decoration: underline; }
.tutorial-header h1 { font-size: 2rem; margin-bottom: 0.5rem; }
.tutorial-meta {
    display: flex; align-items: center; gap: 1rem;
    font-size: 0.85rem; color: var(--neutral-500);
}
.tutorial-meta span { display: flex; align-items: center; gap: 0.3rem; }

.content-body h2 {
    color: var(--neutral-900);
    margin-top: 2rem; margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--neutral-100);
}
.content-body h3 { color: var(--neutral-800); margin-top: 1.5rem; margin-bottom: 0.5rem; }
.content-body p { font-size: 1rem; line-height: 1.8; }
.content-body ul, .content-body ol { margin-bottom: 1rem; padding-left: 1.5rem; }
.content-body ul { list-style: disc; }
.content-body ol { list-style: decimal; }
.content-body li { margin-bottom: 0.5rem; color: var(--neutral-600); line-height: 1.7; }
.content-body strong { color: var(--neutral-800); font-weight: 600; }

/* Tutorial Prev/Next */
.tutorial-nav {
    display: flex; justify-content: space-between; gap: 1rem;
    margin-top: 2rem; padding-top: 1.5rem;
    border-top: 1px solid var(--neutral-100);
}
.tutorial-nav a {
    display: flex; flex-direction: column;
    padding: 0.85rem 1.25rem;
    background: var(--neutral-50);
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-fast);
    max-width: 48%;
}
.tutorial-nav a:hover { background: var(--primary-50); border-color: var(--primary-300); }
.tutorial-nav a .nav-label {
    font-size: 0.75rem; color: var(--neutral-400);
    text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.2rem;
}
.tutorial-nav a .nav-title { font-weight: 600; color: var(--neutral-800); }
.tutorial-nav .next-lesson { text-align: right; margin-left: auto; }

/* ==============================
   CODE BLOCKS
   ============================== */
.code-block {
    background: var(--neutral-900);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin: 1.25rem 0;
    box-shadow: var(--shadow-md);
}
.code-block-header {
    background: rgba(255,255,255,0.06);
    padding: 0.6rem 1rem;
    display: flex; align-items: center; justify-content: space-between;
    border-bottom: 1px solid rgba(255,255,255,0.06);
}
.code-block-lang {
    font-size: 0.75rem; font-weight: 600;
    text-transform: uppercase; color: var(--neutral-400);
    font-family: var(--font-mono);
}
.code-copy-btn {
    display: flex; align-items: center; gap: 0.3rem;
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem; color: var(--neutral-400);
    transition: all var(--transition-fast);
}
.code-copy-btn:hover { background: rgba(255,255,255,0.1); color: white; }
.code-block pre {
    padding: 1.25rem;
    overflow-x: auto;
    font-family: var(--font-mono);
    font-size: 0.875rem; line-height: 1.8;
    color: #e2e8f0;
}
.code-block code .keyword { color: #c792ea; }
.code-block code .string { color: #c3e88d; }
.code-block code .function { color: #82aaff; }
.code-block code .comment { color: #546e7a; font-style: italic; }
.code-block code .number { color: #f78c6c; }
.code-block code .type { color: #ffcb6b; }
.code-block code .operator { color: #89ddff; }
.code-block code .preprocessor { color: #89ddff; }
.code-block code .decorator { color: #c792ea; }
.code-block code .builtin { color: #82aaff; }

/* Legacy code-example */
.code-example {
    background: var(--neutral-900); color: #e2e8f0;
    padding: 1.25rem; border-radius: var(--radius-lg);
    font-family: var(--font-mono); font-size: 0.875rem;
    line-height: 1.8; overflow-x: auto; margin: 1.25rem 0;
    white-space: pre;
}
.comment-green { color: #546e7a; font-style: italic; }

/* ==============================
   VIDEO CONTAINER
   ============================== */
.video-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0; overflow: hidden;
    border-radius: var(--radius-lg);
    margin: 1.5rem 0;
    background: var(--neutral-100);
    box-shadow: var(--shadow-md);
}
.video-container iframe {
    position: absolute; top: 0; left: 0;
    width: 100%; height: 100%; border: none;
}
.video-placeholder {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    display: flex; flex-direction: column;
    align-items: center; justify-content: center;
    background: linear-gradient(135deg, var(--neutral-800), var(--neutral-900));
    color: white; gap: 0.75rem;
}
.video-placeholder .play-icon {
    width: 64px; height: 64px;
    border-radius: 50%;
    background: rgba(255,255,255,0.15);
    display: flex; align-items: center; justify-content: center;
    font-size: 1.5rem;
}
.video-placeholder p { color: var(--neutral-400); font-size: 0.9rem; margin: 0; }

/* ==============================
   QUIZ SECTION
   ============================== */
.quiz-section {
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-xl);
    padding: 2rem;
    margin-top: 2rem;
}
.quiz-section h2 {
    color: var(--neutral-900);
    margin-bottom: 1.5rem;
}
.quiz-question {
    margin-bottom: 1.5rem; padding: 1.25rem;
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-lg);
    background: var(--neutral-50);
    transition: border-color var(--transition-fast);
}
.quiz-question:hover { border-color: var(--primary-200); }
.quiz-question h3 {
    font-size: 1rem; margin-bottom: 0.75rem;
    color: var(--neutral-800);
}
.quiz-options { display: grid; gap: 0.5rem; }
.quiz-option {
    padding: 0.75rem 1rem;
    border: 1.5px solid var(--neutral-200);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
    font-size: 0.9rem; color: var(--neutral-700);
    background: white;
}
.quiz-option:hover { border-color: var(--primary-300); background: var(--primary-50); }
.quiz-option.selected {
    background: var(--primary-50);
    border-color: var(--primary-500);
    color: var(--primary-700); font-weight: 500;
}
.quiz-option.correct {
    background: #dcfce7;
    border-color: var(--success);
    color: #166534;
}
.quiz-option.incorrect {
    background: #fee2e2;
    border-color: var(--error);
    color: #991b1b;
}
.submit-quiz {
    background: linear-gradient(135deg, var(--primary-500), var(--primary-700));
    color: white;
    padding: 0.85rem 2rem; border: none;
    border-radius: var(--radius-lg);
    cursor: pointer; font-size: 1rem; font-weight: 600;
    margin-top: 0.75rem;
    transition: all var(--transition-fast);
    box-shadow: 0 4px 14px rgb(79 70 229 / 0.25);
}
.submit-quiz:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgb(79 70 229 / 0.35);
}
.submit-quiz:disabled { opacity: 0.7; cursor: not-allowed; transform: none; }

/* ==============================
   INFO BOXES
   ============================== */
.info-box {
    padding: 1rem 1.25rem;
    border-radius: var(--radius-lg);
    margin: 1.25rem 0;
    display: flex; gap: 0.75rem; align-items: flex-start;
}
.info-box p { margin: 0; }
.info-box.tip { background: #ecfdf5; border-left: 4px solid var(--success); color: #065f46; }
.info-box.warning { background: #fffbeb; border-left: 4px solid var(--warning); color: #92400e; }
.info-box.note { background: var(--primary-50); border-left: 4px solid var(--info); color: var(--primary-800); }

/* ==============================
   TABLES
   ============================== */
.styled-table {
    width: 100%; border-collapse: collapse;
    margin: 1.25rem 0;
    border-radius: var(--radius-lg); overflow: hidden;
    box-shadow: var(--shadow-sm);
}
.styled-table thead { background: var(--primary-600); color: white; }
.styled-table th, .styled-table td { padding: 0.85rem 1rem; text-align: left; }
.styled-table th { font-weight: 600; font-size: 0.85rem; text-transform: uppercase; letter-spacing: 0.05em; }
.styled-table tbody tr { border-bottom: 1px solid var(--neutral-100); transition: background var(--transition-fast); }
.styled-table tbody tr:hover { background: var(--neutral-50); }
.styled-table tbody tr:nth-child(even) { background: var(--neutral-50); }

/* ==============================
   TOPIC CARDS
   ============================== */
.topic-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.25rem; margin-top: 1.5rem;
}
.topic-card {
    background: white;
    border: 1px solid var(--neutral-200);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
}
.topic-card:hover { transform: translateY(-4px); box-shadow: var(--shadow-lg); border-color: transparent; }
.topic-card-video {
    position: relative; padding-bottom: 56.25%;
    height: 0; overflow: hidden; background: var(--neutral-100);
}
.topic-card-video iframe {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: none;
}
.topic-card-body { padding: 1.25rem; }
.topic-card-body h3 { margin-bottom: 0.5rem; font-size: 1.05rem; }
.topic-card-body p { font-size: 0.85rem; color: var(--neutral-500); margin: 0; }

/* ==============================
   FOOTER
   ============================== */
.site-footer {
    background: var(--neutral-900);
    color: var(--neutral-300);
    padding: 3.5rem 0 0;
    margin-top: 4rem;
}
.footer-grid {
    max-width: var(--max-width);
    margin: 0 auto; padding: 0 2rem;
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr);
    gap: 2.5rem;
}
.footer-brand .logo { margin-bottom: 1rem; }
.footer-brand .logo span { -webkit-text-fill-color: white; }
.footer-brand p { color: var(--neutral-400); font-size: 0.9rem; max-width: 320px; }
.footer-column h4 {
    color: white; font-size: 0.85rem;
    text-transform: uppercase; letter-spacing: 0.05em;
    margin-bottom: 0.85rem;
}
.footer-column a {
    display: block; color: var(--neutral-400);
    font-size: 0.9rem; padding: 0.3rem 0;
    transition: color var(--transition-fast);
}
.footer-column a:hover { color: white; }
.footer-bottom {
    margin-top: 2rem; padding: 1.25rem 0;
    border-top: 1px solid rgba(255,255,255,0.1);
    text-align: center; font-size: 0.85rem; color: var(--neutral-500);
}
.footer-bottom .container {
    display: flex; justify-content: space-between; align-items: center;
}
.footer-socials { display: flex; gap: 1rem; }
.footer-socials a { color: var(--neutral-500); font-size: 1.1rem; transition: color var(--transition-fast); }
.footer-socials a:hover { color: white; }

/* Legacy footer */
footer {
    background-color: var(--neutral-900);
    color: var(--neutral-400);
    text-align: center;
    padding: 1.5rem; margin-top: 3rem; font-size: 0.9rem;
}

/* Legacy header + nav */
header {
    background: linear-gradient(135deg, var(--primary-600), var(--primary-800));
    color: white; padding: 1.25rem 0; box-shadow: var(--shadow-md);
}
header h1 { text-align: center; font-size: 2rem; margin-bottom: 0.75rem; }
main { max-width: var(--max-width); margin: 1.5rem auto; padding: 0 2rem; }
.navbar { max-width: var(--max-width); margin: 0 auto; padding: 0 1rem; }
.navbar ul { display: flex; justify-content: center; gap: 0.5rem; flex-wrap: wrap; }
.navbar a {
    color: white; text-decoration: none;
    padding: 0.5rem 0.9rem; border-radius: var(--radius-md);
    transition: background-color var(--transition-fast); font-size: 0.9rem;
}
.navbar a:hover { background-color: rgba(255,255,255,0.15); }
.logo-link { text-decoration: none; color: inherit; }
.logo-link:hover, .logo-link:focus { color: white; }

/* Content section (legacy) */
.content-section {
    background: white; padding: 2rem;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md); margin-bottom: 1.5rem;
    border: 1px solid var(--neutral-200);
}
.content-section h2 { color: var(--primary-600); margin-bottom: 1.25rem; }

/* ==============================
   BACK TO TOP
   ============================== */
.back-to-top {
    position: fixed; bottom: 2rem; right: 2rem;
    width: 44px; height: 44px;
    border-radius: var(--radius-lg);
    background: var(--primary-500); color: white;
    display: flex; align-items: center; justify-content: center;
    box-shadow: var(--shadow-lg);
    opacity: 0; visibility: hidden;
    transform: translateY(20px);
    transition: all var(--transition-base);
    z-index: 999; font-size: 1.2rem;
}
.back-to-top.visible { opacity: 1; visibility: visible; transform: translateY(0); }
.back-to-top:hover { background: var(--primary-700); transform: translateY(-2px); }

/* ==============================
   ANIMATIONS
   ============================== */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}
.animate-on-scroll {
    opacity: 0; transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
}
.animate-on-scroll.visible { opacity: 1; transform: translateY(0); }

/* Typing animation */
.typing-cursor { animation: blink 1s step-end infinite; }
@keyframes blink { 50% { opacity: 0; } }

/* ==============================
   COMPARISON TABLE
   ============================== */
.comparison-section { padding: 4rem 0; }
.comparison-table {
    width: 100%; border-collapse: collapse;
    margin-top: 2rem; overflow: hidden;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
}
.comparison-table th, .comparison-table td {
    padding: 1rem 1.25rem; text-align: left;
    border-bottom: 1px solid var(--neutral-100);
}
.comparison-table thead th {
    background: var(--neutral-900); color: white;
    font-size: 0.85rem; text-transform: uppercase;
    letter-spacing: 0.05em;
}
.comparison-table tbody tr:hover { background: var(--primary-50); }
.comparison-table tbody td:first-child { font-weight: 600; color: var(--neutral-800); }

/* ==============================
   RESPONSIVE
   ============================== */
@media (max-width: 1024px) {
    .tutorial-layout { grid-template-columns: 1fr; }
    .tutorial-sidebar { position: static; max-height: none; }
    .footer-grid { grid-template-columns: 1fr 1fr; }
    .hero-content { grid-template-columns: 1fr; text-align: center; }
    .hero-text .subtitle { margin-left: auto; margin-right: auto; }
    .hero-actions { justify-content: center; }
    .hero-stats { justify-content: center; }
    .hero-visual { order: -1; }
    .code-window { max-width: 400px; }
    .stats-grid { grid-template-columns: repeat(2, 1fr); }
}

@media (max-width: 768px) {
    .main-nav { display: none; }
    .mobile-menu-btn { display: flex; }
    .main-nav.mobile-open {
        display: flex; flex-direction: column;
        position: fixed;
        top: var(--header-height); left: 0; right: 0; bottom: 0;
        background: white; z-index: 999;
        padding: 1.5rem; gap: 0.5rem;
        overflow-y: auto; animation: fadeIn 0.2s ease;
    }
    .nav-dropdown-content {
        position: static; transform: none;
        opacity: 1; visibility: visible;
        box-shadow: none; border: none;
        padding-left: 1rem;
        max-height: 0;
        overflow: hidden;
        transition: max-height var(--transition-base);
    }
    .nav-dropdown.dropdown-open .nav-dropdown-content {
        max-height: 300px;
    }
    .language-grid, .topic-grid, .features-grid { grid-template-columns: 1fr; }
    .footer-grid { grid-template-columns: 1fr; }
    .footer-bottom .container { flex-direction: column; gap: 0.75rem; }
    .tutorial-nav { flex-direction: column; }
    .tutorial-nav a { max-width: 100%; }
    .navbar ul { flex-direction: column; align-items: center; gap: 0.5rem; }
    .hero-stats { flex-wrap: wrap; gap: 1.25rem; }
}

@media (max-width: 480px) {
    h1 { font-size: 1.75rem; }
    h2 { font-size: 1.35rem; }
    .code-window { max-width: 100%; }
    .stats-grid { grid-template-columns: 1fr; gap: 1rem; }
}

/* Print */
@media print {
    .site-header, .site-footer, .back-to-top,
    .tutorial-sidebar, .theme-toggle, .mobile-menu-btn, .quiz-section { display: none !important; }
    body { background: white; color: black; }
    .tutorial-content { box-shadow: none; border: none; }
}
